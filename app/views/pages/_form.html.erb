<%= simple_form_for @party, url: "/bartenders", method: :get, html: { id: 'home-form' } do |f| %>
  <div class="">
    <%= f.select :theme, collection: Party::TYPES, input_html: { class: "input form-input-index" } %>
  </div>

  <div class="">
    <%= f.select :size, collection: ['5-29', '30-59', '60-90'], input_html: { class: "input form-input-index" } %>
  </div>

  <div class="">
    <%= button_tag type: :submit, class: "btn-search" do %>
      <i class="fa fa-search"></i>
    <% end %>
  </div>
<% end %>
